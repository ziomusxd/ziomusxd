<div class="page-header">
  <h1>Spis zmian w sprzęcie</h1>
</div>

<br>


<table class="table table-striped table-hover">
  <thead>
    <tr class="active">
      <th>Użytkownik</th>
      <th>Nazwa sprzętu</th>
      <th>SN</th>
	  <th>Status</th>
	  <th>Lokalizacja</th>
      <th>Uwagi</th>
	  <th><%#= select("item", "category_id", Category.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'Kategoria'},:onchange => "window.location.replace('/categories/'+this.value);") %></th>
	  <th></th>
    </tr>
  </thead>
  <tbody>
    <% @wzs.each do |w| %>
      <tr>
        <td><%= w.user.name.truncate(30) %></td>
        <td><%= w.item.name.truncate(20) %></td>
        <td><%= w.item.sn.truncate(10)%></td>
		<td><%= w.status.name %></td>
		<td><%= w.location.name %></td>
        <td><%= w.description.truncate(10) %></td>		
		<td><%#= item.category.name %></td>
		<td style="width:80px"> <%= link_to image_tag("http://icons.iconarchive.com/icons/double-j-design/super-mono-3d/96/button-round-play-icon.png",:width=>30,:height=>30, :border=>0), wz_path(w) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= link_to image_tag("http://icons.iconarchive.com/icons/double-j-design/super-mono-3d/96/button-round-fast-backward-icon.png",:width=>50,:height=>50, :border=>0), root_path %> 