<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@item) do |f| %>
	 
      <%= f.label "Nazwa" %>
      <%= f.text_field :name, class: 'form-control' %>
	  
      <%= f.label "Numer seryjny" %>
      <%= f.text_field :sn, class: 'form-control' %>
	  
      <%= f.label "Ilość" %>
      <%= f.number_field :quantity, value: '1' , class: 'form-control' %>
	  
      <%= f.label "Jednostka" %><br>
	  <%= f.collection_select :unit_id, Unit.all, :id, :name, prompt: true %><br>
	  
      <%= f.label "Lokalizacja" %><br>
	  <%= f.collection_select :location_id, Location.all, :id, :name, prompt: true %><br>
	  
      <%= f.label "Uwagi" %>
      <%= f.text_area :description, class: 'form-control' %><br>

      <%= f.submit "Dodaj/Zmień", class: "btn btn-primary" %><br>
    <% end %>
  </div>
</div>