<div class="page-header">
  <h2>Statusy</h2>
</div>

<dt><%= link_to "Nowy status", new_status_path %></dt>

<table class="table table-striped table-hover">
  <thead>
    <tr class="active">
      <th>Nazwa</th>
	  <th>Opis</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @statuses.each do |u| %>
      <tr>
        <td><%= u.name %></td>
		<td><%= u.description %></td>
		
		<td><%= link_to "Edytuj", edit_status_path(u) %></td>

      </tr>
    <% end %>
  </tbody>
</table>