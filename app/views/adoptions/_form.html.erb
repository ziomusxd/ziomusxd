<% provide(:title, 'Przyjęcie eksploatacji') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@adoption) do |f| %>
	  
      <%= f.label "Materiał" %><br>
	  <%= f.collection_select :explo_id, Explo.all, :id, :name, prompt: true %><br>
	  
      <%= f.label "Ilość" %>
      <%= f.number_field :quantity, class: 'form-control' %><br>
	  
      <%= f.label "Uwagi" %>
      <%= f.text_area :description, class: 'form-control' %><br>

      <%= f.submit "Dodaj/Zmień", class: "btn btn-primary" %><br>
    <% end %>
  </div>
</div>
