

<div class="page-header">
  <h1>Spis przyjęć eksploatacji</h1>
</div>

<%#= form_tag(explos_path, :method => "get", id: "search-form") do %>
<%#= text_field_tag :search, params[:search], placeholder: "Szukaj SN" %>
<%#= submit_tag "Szukaj" %>
<%# end %>

<br>

<table class="table table-striped table-hover">
  <thead>
    <tr class="active">
	  <th>Przyjmujący</th>
      <th>Nazwa</th>
      <th>SN</th>
      <th>Ilość</th>
	  <th>Jednostka</th>
      <th>Uwagi</th>
	  <th>Data</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @adoptions.each do |a| %>
      <tr>
		<td><%= a.user.name + " " + a.user.surname %></td>
        <td><%= a.explo.name.truncate(30) %></td>
        <td><%= a.explo.sn.truncate(20) %></td>
        <td><%= a.quantity %></td>
		<td><%= a.explo.unit.name %></td>
        <td><%= a.description.truncate(10) %></td>
		<td><%= a.created_at %></td>
		<td style="width:80px"> <%= link_to image_tag("http://icons.iconarchive.com/icons/double-j-design/super-mono-3d/96/button-round-play-icon.png",:width=>30,:height=>30, :border=>0), adoption_path(a) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


